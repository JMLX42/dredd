description "{{ role_name }}"

{% if is_development_environment %}
start on vagrant-mounted
{% else %}
start on startup
{% endif %}
stop on shutdown

expect fork
respawn

env NODE_ENV={{ environment_name }}
env NODE_PATH="{{ anapi_api_dir }}/node_modules:/usr/lib/node_modules"

{% if is_development_environment %}
env NODE_TLS_REJECT_UNAUTHORIZED=0
{% endif %}

chdir "{{ anapi_api_dir }}"

script
    exec forever --pidFile /var/run/{{ project_name }}-{{ role_name }}.pid start --sourceDir {{ anapi_api_dir }} --workingDir {{ anapi_api_dir }} index.js
end script

pre-stop script
    rm /var/run/{{ project_name }}-{{ role_name }}.pid

    exec forever stop {{ anapi_api_dir }}/index.js
end script
